###########################################################
# Do NOT modify this file, make a copy and rename to .env #
###########################################################
# Change all default usernames and passwords to your preferred choice of login credentials

# Influxdb initial configuration
# Admin user
DOCKER_INFLUXDB_INIT_USERNAME=username
DOCKER_INFLUXDB_INIT_PASSWORD=password
# Organization name
DOCKER_INFLUXDB_INIT_ORG=hsfl
# Some long string used to authenticate access to bucket
DOCKER_INFLUXDB_INIT_ADMIN_TOKEN=INFLUXDBINITADMINTOKEN

# Grafana initial configuration
GF_SECURITY_ADMIN_USER=username
GF_SECURITY_ADMIN_PASSWORD=password
# Allows unsigned plugins, for ease of development
GF_DEFAULT_APP_MODE=development

# Initial passwords for various database user accounts
# Change manually in container after setup.
MYSQL_ROOT_PASSWORD=password
DB_BACKEND_USER_PASSWORD=password
DB_GRAFANA_USER_PASSWORD=password

# Used by backend to find the database, don't change this
DB_HOST=cosmos_db
